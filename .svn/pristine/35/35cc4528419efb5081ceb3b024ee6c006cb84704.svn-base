                                </div>
                            </td>
                            <td style="width: 20%; text-align: center;">
                                <input type="submit" value="Transfer >>" class="btn btn-default" />
                            </td>
                            <td style="width: 20%; text-align: center;">
                                <div class="form-group">

                                    @Html.DropDownList("Destination", new SelectList(Model.Select(i => i.Name).Distinct().ToList(), "HDFS"));

